{
    "manifest_version": 3,
    "name": "Override CSS",
    "version": "1.0",
    "description": "Override specific CSS styles on a webpage",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.sooplive.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "styles.css"
            ],
            "matches": [
                "https://www.sooplive.com/*"
            ]
        }
    ]
}
