{
    "manifest_version": 2,
    "name": "Custom CSS Extension",
    "version": "1.0",
    "description": "Applies custom CSS to specific websites.",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.sooplive.com/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
